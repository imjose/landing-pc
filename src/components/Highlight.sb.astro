---
import { storyblokEditable } from '@storyblok/astro';

const { blok } = Astro.props;
---

<div class="p-5 w-full xl:w-1/3" {...storyblokEditable(blok)}>
	<div class="flex flex-col items-center p-7 gap-2 rounded-3xl drop-shadow-sm">
		<h5 class="text-primary-700 font-bold">{blok.title}</h5>
		<p class="text-primary-900 px-5 line-clamp-4">{blok.description}</p>
	</div>
</div>
